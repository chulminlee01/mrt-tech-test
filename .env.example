# =============================================================================
# API Keys (Required)
# =============================================================================

# NVIDIA API Key (Primary - for minimax-m2 model)
# Get at: https://build.nvidia.com/
NVIDIA_API_KEY=nvapi-...

# OpenRouter API Key (Fallback)
# Get at: https://openrouter.ai/
OPENROUTER_API_KEY=sk-or-v1-...

# Google Custom Search API (For research agent)
# Get at: https://programmablesearchengine.google.com/
GOOGLE_API_KEY=AIza...
GOOGLE_CSE_ID=your_search_engine_id

# =============================================================================
# Model Configuration (Optional)
# =============================================================================

# Primary model (NVIDIA)
DEFAULT_MODEL=minimaxai/minimax-m2
NVIDIA_BASE_URL=https://integrate.api.nvidia.com/v1

# Fallback model (DeepSeek via OpenRouter with thinking)
FALLBACK_MODEL=deepseek-ai/deepseek-v3.1-terminus
FALLBACK_BASE_URL=https://openrouter.ai/api/v1
DEEPSEEK_THINKING=True

# Final fallback (OpenRouter free model)
OPENROUTER_FALLBACK_MODEL=z-ai/glm-4.5-air:free
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1

# =============================================================================
# LLM Parameters (Optional)
# =============================================================================

OPENAI_TEMPERATURE=0.7
OPENAI_MODEL=minimaxai/minimax-m2

# =============================================================================
# OpenRouter Attribution (Optional but recommended)
# =============================================================================

OPENROUTER_SITE_URL=https://myrealtrip.com
OPENROUTER_APP_NAME=MRT Assignment Generator

# =============================================================================
# Agent Behavior (Optional)
# =============================================================================

RECENT_MONTHS=6                 # Google Search recency window (1-12 months)
AGENT_MAX_ITERATIONS=8          # ReAct agent max iterations (3-20)
